assert_function iai || exit

function iai-moods () {
  local emotions="$(iai-path dojo db artii emotions)"
  info "using $emotions database from dojo's artii"
  case "$1" in
    "cat") cat "$emotions" ;;
    "vim") iai confirm exec "vim $emotions" ;;
    *) <"$emotions"  head -n -1 | shuf -n 1 ;;
  esac
  return 0
}

