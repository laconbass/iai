assert_function iai || exit

function iai-gulp () {
  if test -r "$PWD/gulpfile.js"; then
    local gulpfile="$PWD/gulpfile.js"
  else
    local gulpfile="$(iai root)/dojo/gulp/gulpfile.js"
  fi
  info "using $gulpfile"
  local cwd="$PWD"
  "$(iai nbin gulp)" \
    --cwd "$cwd" \
    --gulpfile "$gulpfile" \
    "$@"
}

