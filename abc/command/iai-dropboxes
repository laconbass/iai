assert_function iai || exit

function iai-dropboxes () {
  # WARNING: this shit was cowboy-coded and cowboy-tested too
  # see http://www.dropboxwiki.com/tips-and-tricks/run-multiple-instances-of-dropbox-simultaneously-on-linux-or-mac-os-x
  # and https://wiki.archlinux.org/index.php/Dropbox
  ##
	test "$(hostname)" = "shitbook" || fail "this only works at shitbook"
  local dropboxes=".dropbox-alt-1 .dropbox-alt-2"
  for dropbox in $dropboxes
  do
    HOME="/home/$USER/$dropbox"
		HOME="$HOME" "$HOME/.dropbox-dist/dropboxd" 2>/dev/null &
		info "started the dropbox daemon for '$HOME' ($? - $!)"
  done
}
##
