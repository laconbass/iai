#!/usr/bin/env -S iai run

assert_function iai || exit

echo >&2 "-------------------------------------------------"
TESTUSER=lolo
TESTPASS=insecure

info "> automated iai-login test"
iai login <<<"$TESTUSER"$'\n'"$TESTPASS" && echo "OK" || {
  emsg "authorization doesn't succed for %s" "$TESTUSER:$TESTPASS"
	info "> iai-login test reading username and password from stdin"
	iai login && echo "PASS" || echo "FAIL" && exit 1
}

##
# vim modeline
# /* vim: set filetype=sh ts=2 shiftwidth=2: */
