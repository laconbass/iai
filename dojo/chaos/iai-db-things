
case "$1" in
  "-h"|"-?"|"--help"|"help") iai-help; exit ;;
  ##
  # TODO
  # - This should not be a built-in, sure
  id)
    if test -x $2; then
      echo "$(basename "$2" | sed 's/iai-//')"
      exit 0
    fi
    fail "miss exec perms: '$2'"
    exit 1
  ;;
  db)
    DB="$(iai dir)/db/$(iai id "$2")/$(hostname)"
    mkdir -p "$DB"
    echo "$DB"
  ;;
esac
